
#include <dt-bindings/zmk/matrix_transform.h>
#include "7skb-layouts.dtsi"

/ {
    chosen {
        zmk,physical-layout = &physical_layout0;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <14>;
        rows = <5>;
        map = <
// 1      2      3      4       5       6             1        2        3        4        5        6        7        8        9         
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)       RC(0,6)  RC(0,7)  RC(0,8)  RC(0,9)  RC(0,10) RC(0,11) RC(0,12) RC(0,13) RC(1,13) 
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)       RC(1,6)  RC(1,7)  RC(1,8)  RC(1,9)  RC(1,10) RC(1,11) RC(1,12) RC(2,13)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)       RC(2,6)  RC(2,7)  RC(2,8)  RC(2,9)  RC(2,10) RC(2,11) RC(2,12) 
RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)       RC(3,6)  RC(3,7)  RC(3,8)  RC(3,9)  RC(3,10) RC(3,11) RC(3,12)
        RC(4,1) RC(4,2) RC(4,3) RC(4,4)               RC(4,6)  RC(4,7)  RC(4,9)  RC(4,10)
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        wakeup-source;

        diode-direction = "col2row";
        row-gpios
        = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>   // D4
        ,<&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // C6
        ,<&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // D7
        ,<&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // E6
        ,<&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>    // B4
        ;

        col-gpios
        = <&pro_micro 21 GPIO_ACTIVE_HIGH>   // F4
        ,<&pro_micro 20 GPIO_ACTIVE_HIGH>    // F5
        ,<&pro_micro 19 GPIO_ACTIVE_HIGH>    // F6
        ,<&pro_micro 18 GPIO_ACTIVE_HIGH>    // F7
        ,<&pro_micro 15 GPIO_ACTIVE_HIGH>    // B1
        ,<&pro_micro 14 GPIO_ACTIVE_HIGH>    // B3
        ,<&pro_micro 16 GPIO_ACTIVE_HIGH>    // B2
        ,<&pro_micro 9 GPIO_ACTIVE_HIGH>     // B5
        ;
    };

    /* Wake専用GPIO key（任意のrowピン、例:最初row D4） */
    keys {
        compatible = "gpio-keys";
        wakeup_key: wakeup_key {
            gpios = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
        };
    };

    /* Trigger: col全ピンactiveに */
    wakeup_trigger: wakeup_trigger {
        compatible = "zmk,gpio-key-wakeup-trigger";
        trigger = <&wakeup_key>;
        wakeup-source;
        extra-gpios =
            <&pro_micro 21 GPIO_ACTIVE_HIGH>   // F4 col0
            ,<&pro_micro 20 GPIO_ACTIVE_HIGH>   // F5 col1
            ,<&pro_micro 19 GPIO_ACTIVE_HIGH>   // F6 col2
            ,<&pro_micro 18 GPIO_ACTIVE_HIGH>   // F7 col3
            ,<&pro_micro 15 GPIO_ACTIVE_HIGH>   // B1 col4
            ,<&pro_micro 14 GPIO_ACTIVE_HIGH>   // B3 col5
            ,<&pro_micro 16 GPIO_ACTIVE_HIGH>   // B2 col6
            ,<&pro_micro 9  GPIO_ACTIVE_HIGH>;  // B5 col7
    };

    soft_off_wakers {
        compatible = "zmk,soft-off-wakeup-sources";
        wakeup-sources = <&wakeup_trigger>;  // kscan0から変更
    };
};

&physical_layout0 {
    kscan = <&kscan0>;
    transform = <&default_transform>;
};
